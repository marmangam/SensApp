<?xml version="1.0" encoding="utf-8"?>
<!--
    Layout vertical que representa la pantalla de inicio de sesión. -->

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondo_login_usuarios"
    >

    <TextView
        android:id="@+id/texto_dni"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="270dp"
        android:layout_gravity="center_horizontal"
        android:text="DNI:"
        android:textSize="25sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:textColor="@color/fondo"
        android:textAppearance="?android:attr/textAppearanceLarge"></TextView>

    <EditText
        android:id="@+id/txtDni"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:hint="Introduce tu DNI!"
        android:text="23456789B"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/texto_contrasena"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="0dp"
        android:text="Contraseña:"
        android:textSize="25sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:textColor="@color/fondo"
        android:textAppearance="?android:attr/textAppearanceLarge" ></TextView>


    <EditText
        android:hint="password2"
        android:id="@+id/txtPassword"
        android:text=""
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:inputType="textPassword"
        android:textStyle="italic"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="50dp">


        <Button
            android:id="@+id/button_acceso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:width="175dp"
            android:text="Acceder"
            android:backgroundTint="@color/fondo"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:textSize="17sp"
            />


    </LinearLayout>

</LinearLayout>